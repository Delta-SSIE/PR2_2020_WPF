<Window x:Class="_15_Grid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_15_Grid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Button Content="Tlacitko" Grid.Row="1" Grid.Column="1" Margin="10,20,30,40" HorizontalAlignment="Left" Width="160"/>
        <TextBlock Text="Tady je text" Grid.Row="0" Grid.Column="1"/>
        <TextBox x:Name="vstupTB" Grid.Row="2" Grid.Column="0" />
    </Grid>
</Window>
