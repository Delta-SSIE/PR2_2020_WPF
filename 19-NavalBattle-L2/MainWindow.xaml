<Window x:Class="_19_NavalBattle_L2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_19_NavalBattle_L2"
        mc:Ignorable="d"
        Title="MainWindow" Height="650
        " Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Label x:Name="PlayerScore" Content="PlayerScore" Grid.Column="0" Grid.Row="0" Margin="10" FontSize="15" HorizontalContentAlignment="Center"/>
        <Label x:Name="ComputerScore" Content="ComputerScore" Grid.Column="1" Grid.Row="0" Margin="10" FontSize="15" HorizontalContentAlignment="Center"/>

        <Grid x:Name="PlayerSeaDisplay" Grid.Column="0" Grid.Row="1" Margin="10"/>
        <Grid x:Name="ComputerSeaDisplay" Grid.Column="1" Grid.Row="1" Margin="10"/>
        <ScrollViewer Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="10">
            <TextBox x:Name="BattleLog"/>    
        </ScrollViewer>
        

    </Grid>
</Window>
