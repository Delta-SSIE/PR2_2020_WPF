<Window x:Class="_20_Hodiny.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20_Hodiny"
        mc:Ignorable="d"
        Title="MainWindow" Height="77" Width="206">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="Hours" Content="00" FontSize="30" FontFamily="Consolas"/>
            <Label Content=":" FontSize="30" FontFamily="Consolas"/>
            <Label x:Name="Mins" Content="00" FontSize="30" FontFamily="Consolas"/>
            <Label Content=":" FontSize="30" FontFamily="Consolas"/>
            <Label x:Name="Secs" Content="00" FontSize="30" FontFamily="Consolas"/>
        </StackPanel>

    </Grid>
</Window>
