<Window x:Class="_18_NavalBattle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_18_NavalBattle"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label x:Name="PlayerScore" Content="PlayerScore" Grid.Column="0" Grid.Row="0" Margin="10" FontSize="15" HorizontalContentAlignment="Center"/>
        <Label x:Name="ComputerScore" Content="ComputerScore" Grid.Column="1" Grid.Row="0" Margin="10" FontSize="15" HorizontalContentAlignment="Center"/>

        <Grid x:Name="PlayerSeaDisplay" Grid.Column="0" Grid.Row="1" Margin="10"/>
        <Grid x:Name="ComputerSeaDisplay" Grid.Column="1" Grid.Row="1" Margin="10"/>
        
    </Grid>
</Window>
